<h3>Welcome {{user.displayName}}</h3>

<h1>Posts</h1>
<div class="row">
    {{#each posts}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                {{!-- todo: edit --}}
                <b>Posted on:</b> {{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}
            </div>
            <div class="card-content center-align">
            
                <b><p>{{content}}</p></b>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="users/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/posts/{{_id}}" class="btn cyan">Read more...</a>
            </div>
            </div>
        </div>
    {{else}}
        <p>No posts</p>
    {{/each}}
</div>